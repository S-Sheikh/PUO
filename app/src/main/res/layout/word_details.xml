<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_word_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/civ_word_pic"
        android:text="Inkwenkwe"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_word_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_word_text"
        android:layout_toRightOf="@id/civ_word_pic"
        android:text="Unsupported"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorPrimaryText"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_bg_supporters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_supporters"
        android:layout_alignBottom="@id/tv_word_status"
        android:layout_below="@id/tv_word_text"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/tv_word_status"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_supporters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_word_status"
        android:layout_below="@id/tv_word_text"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/tv_word_status"
        android:gravity="center"
        android:paddingLeft="@dimen/dp4"
        android:paddingRight="@dimen/dp4"
        android:paddingTop="2dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="8sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_word_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_word_status"
        android:layout_toRightOf="@id/civ_word_pic"
        android:text="added by: N. Mcebisi"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="12sp"
        android:textStyle="normal|italic" />

    <TextView
        android:id="@+id/tv_word_lexicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/rtb_word_rating"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:text="Noun, Xhosa"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorAccent"
        android:textSize="12sp" />

    <RatingBar
        android:id="@+id/rtb_word_rating"
        style="?attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_word_lexicon"
        android:layout_marginRight="36dp"
        android:layout_marginTop="8dp"
        android:isIndicator="true"
        android:scaleX="1.25"
        android:scaleY="1.25"
        android:stepSize="0.5"
        android:transformPivotX="20dp" />
</merge>