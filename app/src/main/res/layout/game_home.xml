<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".GameHome">

    <include layout="@layout/puo_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/rect_bar" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Word Game"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/primary_text_dark" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_toStartOf="@+id/textView3"
            android:src="@drawable/ic_word_game" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:src="@drawable/ic_word_game" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_whatLanguage"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp"
            android:onClick="onClick"
            android:src="@drawable/ic_game_home" />

        <ImageView
            android:id="@+id/iv_partsOfSpeech"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_margin="10dp"
            android:layout_marginRight="5dp"
            android:onClick="onClick"
            android:src="@drawable/ic_game_home" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_matchDefinition"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp"
            android:onClick="onClick"
            android:src="@drawable/ic_game_home" />

        <ImageView
            android:id="@+id/iv_fillInBlanks"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_margin="10dp"
            android:layout_marginRight="5dp"
            android:onClick="onClick"
            android:src="@drawable/ic_game_home" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/rect_bar" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Mixed Game"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/background_floating_material_light"
            android:textSize="28dp" />
    </RelativeLayout>
</LinearLayout>
