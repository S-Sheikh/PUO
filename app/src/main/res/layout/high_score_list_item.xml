<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_word_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    cardView:cardBackgroundColor="@color/cardview_light_background"
    cardView:cardCornerRadius="4dip"
    cardView:cardPreventCornerOverlap="false"
    cardView:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/cv_word_list_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_background"
        android:padding="4dip">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_word_pic"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginRight="6dip"
            android:src="@drawable/dp"
            cardView:civ_border_color="@color/colorPrimary"
            cardView:civ_border_width="0.5dip" />

        <TextView
            android:id="@+id/tv_highName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/civ_word_pic"
            android:layout_toRightOf="@+id/civ_word_pic"
            android:text="Username"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_highTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_highName"
            android:layout_toEndOf="@+id/civ_word_pic"
            android:layout_toRightOf="@+id/civ_word_pic"
            android:text="tv_highTime"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_circleScore"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:allowUndo="false"
            android:background="@drawable/game_button_bg_score"
            android:elevation="0dp"
            android:text="@string/game_no_score"
            android:textColor="@color/gColorScore"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

