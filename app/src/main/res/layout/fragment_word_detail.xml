<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="za.ac.cut.puo.WordDetailFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/app_bar_word_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/word_detail_toolbar"
                elevation="4dip"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_word_detail" />

                <TextView
                    android:id="@+id/toolbar_title_word_detail"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="casual"
                    android:text="Talk to me"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_close_word_detail"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@null"
                    android:text="X"
                    android:textSize="24sp" />
            </android.support.v7.widget.Toolbar>

            <ImageView
                android:id="@+id/word_desc_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/dp" />
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:id="@+id/tv_word_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inkwenkwe"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_word_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_word_text"
                android:text="Unsupported"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:id="@+id/tv_word_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_word_status"
                android:text="added by: N. Mcebisi"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="12sp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/tv_word_lexicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rtb_word_rating"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dip"
                android:text="Noun, Xhosa"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <RatingBar
                android:id="@+id/rtb_word_rating"
                style="?attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_word_author"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_word_lexicon"
                android:layout_marginRight="8dp"
                android:isIndicator="true"
                android:rating="4.5"
                android:scaleX="1.25"
                android:scaleY="1.25"
                android:stepSize="0.5" />

            <ImageView
                android:id="@+id/iv_ic_pronunciation"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/tv_word_text"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@id/tv_word_text"
                app:srcCompat="@drawable/ic_add_sound" />

            <View
                android:id="@+id/divider1"
                style="@style/divider"
                android:layout_width="match_parent"
                android:layout_height="0.75dp"
                android:layout_below="@id/tv_word_author"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_word_definition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider1"
                android:text="Definition..." />

            <TextView
                android:id="@+id/tv_label_sentence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_word_definition"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:text="example sentence:"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:id="@+id/tv_word_sentence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_label_sentence"
                android:layout_marginLeft="24dp"
                android:text="Sentence..." />
        </RelativeLayout>

        <View
            android:id="@+id/divider2"
            style="@style/divider"
            android:layout_width="match_parent"
            android:layout_height="0.75dp" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/word_detail_actions_toolbar"
            elevation="4dip"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#efecec"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

