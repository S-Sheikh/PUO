<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="za.ac.cut.puo">

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Messaging permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="za.ac.cut.puo.permission.C2D_MESSAGE" />

    <permission
        android:name="za.ac.cut.puo.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- End Messaging permissions -->
    <application
        android:name=".PUOApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_puo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- android:screenOrientation="portrait"  I think ??!!?? this forces our app to be potrait only -->
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".PushReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="za.ac.cut.puo" />
            </intent-filter>
        </receiver>

        <service android:name="com.backendless.AndroidService" />

        <activity
            android:name=".Register"
            android:parentActivityName=".Login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Login" />
        </activity>
        <activity
            android:name=".HomeMenu"
            android:parentActivityName=".Login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Login" />
        </activity>
        <activity
            android:name=".Update"
            android:parentActivityName=".HomeMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeMenu" />
        </activity>
        <activity
            android:name=".GameMatchDefinition"
            android:parentActivityName=".GameHome">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GameHome" />
        </activity>
        <activity
            android:name=".GamePartsOfSpeech"
            android:parentActivityName=".GameHome">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GameHome" />
        </activity>
        <activity
            android:name=".GameWhatLanguage"
            android:parentActivityName=".GameHome">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GameHome" />
        </activity>
        <activity
            android:name=".GameFillInTheBlank"
            android:parentActivityName=".GameHome">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GameHome" />
        </activity>
        <activity
            android:name=".GameHome"
            android:parentActivityName=".HomeMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeMenu" />
        </activity>
        <activity android:name=".Splash" />
        <activity
            android:name=".WordTreasureActivity"
            android:parentActivityName=".HomeMenu">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeMenu" />
        </activity>
        <activity
            android:name=".ChooseNicknameActivity"
            android:parentActivityName=".HomeMenu"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeMenu" />
        </activity>
        <activity
            android:name=".AcceptChatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectUserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WordChestActivity"
            android:label="@string/title_activity_word_chest"
            android:parentActivityName=".HomeMenu"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="za.ac.cut.puo.HomeMenu" />
        </activity>
    </application>

</manifest>